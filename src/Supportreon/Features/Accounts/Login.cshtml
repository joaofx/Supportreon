@model AccountLogin.Command

<div class="row justify-content-center">
    <div class="col-md-10">
        <div class="card">
            <div class="card-header">Login</div>

            <div class="card-body">
                
                <miru-form>
                
                    <miru-summary />
                    
                    <mi for="ReturnUrl" type="hidden" />
                    
                    <div class="form-group row">
                        <ml for="Email" class="col-md-4 col-form-label text-md-right" />
                        
                        <div class="col-md-6">
                            <mi for="Email" />
                        </div>
                    </div>

                    <div class="form-group row">
                        <ml for="Password" class="col-md-4 col-form-label text-md-right" />

                        <div class="col-md-6">
                            <mi for="Password" />
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-6 offset-md-4">
                            <div class="form-check">
                                <mi for="Remember" class="form-check-input" />
                                <ml for="Remember" class="form-check-label"/>
                            </div>
                        </div>
                    </div>

                    <div class="form-group row mb-0">
                        <div class="col-md-8 offset-md-4">
                            <miru-submit value="Login"/>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-8 offset-md-4">
                            <div class="mt-3">
                                <a href="#">Forgot password?</a>
                            </div>
                            <div class="mt-3">
                                <a for="@(new AccountRegister.Command { ReturnUrl = Model.ReturnUrl })">
                                    Create an account
                                </a>
                            </div>
                        </div>
                    </div>
                    
                </miru-form>
                
            </div>
        </div>
    </div>
</div>
